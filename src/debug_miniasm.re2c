static uint32_t to_hex(const char *iter, const char *end) {
  uint32_t rv = 0;
  while(iter != end) {
    char c = *iter++;
    rv <<= 4;
    if (isdigit(c)) rv |= c - '0';
    else rv |= (c | 0x20) - 'a' + 10;
  }
  return rv;
}

static const char *ltrim(const char *cp) {
  while (isspace(*cp)) ++cp;
  return cp;
}

